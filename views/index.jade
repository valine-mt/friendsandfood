extends layout

block content
  .main-container
    h1= title

    .light-green-container
      form(id="submit-form", action="/index", method="POST")
        input(name="loginUsername", type="text", placeholder="Enter username", autofocus)
        input(name="loginPassword", type="password", placeholder="Enter password")
        input(type="submit", value="Login", class="button-submit")
  
  .log-btn-navbar
    a(href="/signup") Sign up
    a(href="/") Login
